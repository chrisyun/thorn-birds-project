<mapper namespace="FlowMindsMapper">

	<resultMap id="BaseResultMap" type="org.thorn.workflow.entity.ActivityMind">
		<id column="ID" property="id" jdbcType="DECIMAL" />
		<result column="FLOWINSTID" property="flowInstId" jdbcType="VARCHAR" />
		<result column="ACTIVITYNAME" property="activityName" jdbcType="VARCHAR" />
		<result column="TASKID" property="taskId" jdbcType="VARCHAR" />
		<result column="USERID" property="userId" jdbcType="VARCHAR" />
		<result column="USERNAME" property="userName" jdbcType="VARCHAR" />
		<result column="CREATETIME" property="createTime" jdbcType="VARCHAR" />
		<result column="MINDS" property="minds" jdbcType="VARCHAR" />
		<result column="ISPASSED" property="isPassed" jdbcType="VARCHAR" />
