	<sql id="Base_Column_List">
		ID,FLOWINSTID, ACTIVITYNAME, TASKID, USERID, USERNAME,
		CREATETIME, MINDS, ISPASSED
  	</sql>

	<sql id="Where_Clause">
		<where>
			<if test="flowInstId != null and flowInstId != ''">
				AND FLOWINSTID = #{flowInstId,jdbcType=VARCHAR}
      		</if>
		</where>
	</sql>

	<insert id="insert" keyProperty="id" useGeneratedKeys="true"
		parameterType="org.thorn.workflow.entity.ActivityMind">
		insert into JBPM4_EXTEND_MINDS
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="flowInstId != null and flowInstId != ''">FLOWINSTID,</if>
			<if test="activityName != null and activityName != ''">ACTIVITYNAME,</if>
			<if test="taskId != null and taskId != ''">TASKID,</if>
			<if test="userId != null and userId != ''">USERID,</if>
			<if test="userName != null and userName != ''">USERNAME,</if>
			<if test="createTime != null and createTime != ''">CREATETIME,</if>
			<if test="minds != null and minds != ''">MINDS,</if>
			<if test="isPassed != null and isPassed != ''">ISPASSED,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="flowInstId != null and flowInstId != ''">#{flowInstId,jdbcType=VARCHAR},</if>
			<if test="activityName != null and activityName != ''">#{activityName,jdbcType=VARCHAR},</if>
			<if test="taskId != null and taskId != ''">#{taskId,jdbcType=VARCHAR},</if>
			<if test="userId != null and userId != ''">#{userId,jdbcType=VARCHAR},</if>
			<if test="userName != null and userName != ''">#{userName,jdbcType=VARCHAR},</if>
			<if test="createTime != null and createTime != ''">#{createTime,jdbcType=VARCHAR},</if>
			<if test="minds != null and minds != ''">#{minds,jdbcType=VARCHAR},</if>
			<if test="isPassed != null and isPassed != ''">#{isPassed,jdbcType=VARCHAR},</if>
		</trim>
	</insert>
	<update id="update" parameterType="org.thorn.workflow.entity.ActivityMind">
		update JBPM4_EXTEND_MINDS
		<set>
			<if test="userName != null and userName != ''">USERNAME = #{userName,jdbcType=VARCHAR},</if>
			<if test="minds != null and minds != ''">MINDS = #{minds,jdbcType=VARCHAR},</if>
			<if test="isPassed != null and isPassed != ''">ISPASSED = #{isPassed,jdbcType=VARCHAR},</if>
			<if test="createTime != null and createTime != ''">CREATETIME = #{createTime,jdbcType=VARCHAR},</if>
		</set>
		where ID = #{id,jdbcType=DECIMAL}
	</update>

	<select id="queryList" parameterType="hashmap" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from JBPM4_EXTEND_MINDS
		<include refid="Where_Clause" />
		order by CREATETIME ASC
	</select>

</mapper>