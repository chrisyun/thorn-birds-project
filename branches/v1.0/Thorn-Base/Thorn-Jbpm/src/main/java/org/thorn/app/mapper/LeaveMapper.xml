<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="LeaveMapper">

	<resultMap id="BaseResultMap" type="org.thorn.app.entity.LeaveForm">
		<id column="ID" property="id" jdbcType="DECIMAL" />
		<result column="DAYS" property="days" jdbcType="VARCHAR" />
		<result column="REASON" property="reason" jdbcType="VARCHAR" />
		<result column="USERID" property="userId" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		ID, DAYS, REASON, USERID
    </sql>

	<sql id="Where_Clause">
		<where>
			<if test="id != null">
				and ID = #{id,jdbcType=DECIMAL}
      		</if>
		</where>
	</sql>

	<insert id="insert" keyProperty="id" useGeneratedKeys="true"
		parameterType="org.thorn.app.entity.LeaveForm">
		insert into T_APP_LEAVE
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="days != null and days != ''">DAYS,</if>
			<if test="reason != null and reason != ''">REASON,</if>
			<if test="userId != null and userId != ''">USERID,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="days != null and days != ''">#{days,jdbcType=VARCHAR},</if>
			<if test="reason != null and reason != ''">#{reason,jdbcType=VARCHAR},</if>
			<if test="userId != null and userId != ''">#{userId,jdbcType=VARCHAR},</if>
		</trim>
	</insert>

	<update id="update" parameterType="org.thorn.app.entity.LeaveForm">
		update T_APP_LEAVE
		<set>
			<if test="days != null and days != ''">DAYS = #{days,jdbcType=VARCHAR},</if>
			<if test="reason != null and reason != ''">REASON = #{reason,jdbcType=VARCHAR},</if>
			<if test="userId != null and userId != ''">USERID = #{userId,jdbcType=VARCHAR},</if>
		</set>
		where ID = #{id,jdbcType=DECIMAL}
	</update>

	<select id="selectPage" resultMap="BaseResultMap" parameterType="hashmap">
		<include refid="MySQLCommonMapper.pagingStart" />
		select
		<include refid="Base_Column_List" />
		from T_APP_LEAVE
		<include refid="Where_Clause" />
		<include refid="MySQLCommonMapper.sortInfo" />
		<include refid="MySQLCommonMapper.pagingEnd" />
	</select>

	<select id="selectPageCount" parameterType="hashmap" resultType="long">
		select count(*) from T_APP_LEAVE
		<include refid="Where_Clause" />
	</select>

</mapper>