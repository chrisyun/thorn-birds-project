<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="EntrustMapper">

	<cache eviction="LRU" type="org.thorn.dao.mybatis.cache.CustomCache">
		<property name="springBean" value="ehcacheService" />
	</cache>

	<resultMap id="BaseResultMap"
		type="org.thorn.workflow.entity.Entruster">
		<id column="ID" property="id" jdbcType="DECIMAL" />
		<result column="USERID" property="userId" jdbcType="VARCHAR" />
		<result column="PROCESSDFID" property="processDfId" jdbcType="VARCHAR" />
		<result column="ENTRUSTER" property="entruster" jdbcType="VARCHAR" />
		<result column="ENTRUSTERNAME" property="entrusterName" jdbcType="VARCHAR" />
		<result column="BEGINDATE" property="beginDate" jdbcType="VARCHAR" />
		<result column="ENDDATE" property="endDate" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		e.ID,USERID,e.PROCESSDFID,e.ENTRUSTER,e.ENTRUSTERNAME,e.BEGINDATE,e.ENDDATE
  	</sql>

	<sql id="Where_Clause">
		<where>
			<if test="beginDate != null and beginDate != ''">
				AND e.BEGINDATE &gt;= #{beginDate,jdbcType=VARCHAR}
      		</if>
      		<if test="endDate != null and endDate != ''">
				AND e.ENDDATE >= #{endDate,jdbcType=VARCHAR}
      		</if>
			<if test="processDfId != null and processDfId != ''">
				AND e.PROCESSDFID = #{processDfId,jdbcType=VARCHAR}
      		</if>
		</where>
	</sql>

	<insert id="insert" parameterType="org.thorn.workflow.entity.Entruster">
		insert into JBPM4_EXTEND_ENTRUST
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userId != null and userId != ''">USERID,</if>
			<if test="processDfId != null and processDfId != ''">PROCESSDFID,</if>
			<if test="entruster != null and entruster != ''">ENTRUSTER,</if>
			<if test="entrusterName != null and entrusterName != ''">ENTRUSTERNAME,</if>
			<if test="beginDate != null and beginDate != ''">BEGINDATE,</if>
			<if test="endDate != null and endDate != ''">ENDDATE,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="userId != null and userId != ''">#{userId,jdbcType=VARCHAR},</if>
			<if test="processDfId != null and processDfId != ''">#{processDfId,jdbcType=VARCHAR},</if>
			<if test="entruster != null and entruster != ''">#{entruster,jdbcType=VARCHAR},</if>
			<if test="entrusterName != null and entrusterName != ''">#{entrusterName,jdbcType=VARCHAR},</if>
			<if test="beginDate != null and beginDate != ''">#{beginDate,jdbcType=VARCHAR},</if>
			<if test="endDate != null and endDate != ''">#{endDate,jdbcType=VARCHAR},</if>
		</trim>
	</insert>
	<update id="update" parameterType="org.thorn.workflow.entity.PageAuth">
		update JBPM4_EXTEND_ENTRUST
		<set>
			<if test="userId != null and userId != ''">USERID=#{userId,jdbcType=VARCHAR},</if>
			<if test="processDfId != null and processDfId != ''">PROCESSDFID=#{processDfId,jdbcType=VARCHAR},</if>
			<if test="entruster != null and entruster != ''">ENTRUSTER=#{entruster,jdbcType=VARCHAR},</if>
			<if test="entrusterName != null and entrusterName != ''">ENTRUSTERNAME=#{entrusterName,jdbcType=VARCHAR},</if>
			<if test="beginDate != null and beginDate != ''">BEGINDATE=#{beginDate,jdbcType=VARCHAR},</if>
			<if test="endDate != null and endDate != ''">ENDDATE=#{endDate,jdbcType=VARCHAR},</if>
		</set>
		where ID = #{id,jdbcType=DECIMAL}
	</update>

	<delete id="delete">
		delete from JBPM4_EXTEND_ENTRUST where ID in
		<foreach collection="list" item="item" open="(" close=")"
			separator=",">
			#{item,jdbcType=DECIMAL}
		</foreach>
	</delete>

	<select id="selectList" resultMap="BaseResultMap" parameterType="hashmap">
		select
		<include refid="Base_Column_List" />
		from JBPM4_EXTEND_FLOWTYPE f 
		left join 
		(select * from JBPM4_EXTEND_ENTRUST where e.USERID = #{userId,jdbcType=VARCHAR}) e 
		on f.FLOWKEY = e.processDfId 
		<include refid="Where_Clause" />
		<include refid="MySQLCommonMapper.sortInfo" />
	</select>
	
	<select id="select" resultMap="BaseResultMap" parameterType="hashmap">
		select
		<include refid="Base_Column_List" />
		from JBPM4_EXTEND_ENTRUST e 
		<include refid="Where_Clause" />
	</select>
	
</mapper>